@model List<Variants>


<div class="container">
    @if (Model.Count == 0)
    {
        <div class="row">
            Brak zapisanych jadłospisów.
        </div>
    }
    else
    {
        @foreach (var variant in Model)
        {
        <div class="row mb-3">
            @Html.RadioButtonFor(m => variant.Selected, variant.Selected, new { htmlAttributes = new { @class="form-control", @id = variant.Name } }) 
            @Html.LabelFor(m=>variant.Name, @variant.Name)
        </div>
        }
    }
</div>
