@using Dietician.Enums
@model ChangeMenu


<div class="row">
    <div class="col">
        @Html.Label("Wybierz dzień")
    </div>
    <div class="col input">
        @Html.DropDownListFor(model =>model.DayOfWeek,
             new SelectList(new Dictionary<string, string> () {
                 { "Poniedziałek", @Dietician.Enums.DayOfWeek.Poniedziałek.ToString() },
                 { "Wtorek", @Dietician.Enums.DayOfWeek.Wtorek.ToString() },
                 { "Środa", @Dietician.Enums.DayOfWeek.Środa.ToString() },
                 { "Czwartek", @Dietician.Enums.DayOfWeek.Czwartek.ToString() },
                 { "Piątek", @Dietician.Enums.DayOfWeek.Piątek.ToString() },
                 { "Sobota", @Dietician.Enums.DayOfWeek.Sobota.ToString() },
                 { "Niedziela", @Dietician.Enums.DayOfWeek.Niedziela.ToString() },
             }, "Value","Key"),
             new { @class = "form-control" } )
    </div>
</div>

<div class="row">
    <div class="col">
        @Html.CheckBoxFor(m => m.AllDay, new { @checked = Model.AllDay })
        @Html.LabelFor(m => m.AllDay, "Cały dzień")
    </div>
</div>

<div class="divider"></div>

<div>
    @for (var i = 0; i < Model.MealTypes.Count; i++)
    {
        <div class="row">
            <div class="col">
                @*@Html.CheckBox(Model.MealTypes.ElementAt(i).Value, new { @checked = Model.MealTypes.ElementAt(i).Selected })*@
                @*@Html.CheckBoxFor(m=>Model.MealTypes.ElementAt(i).Selected, new { @checked = Model.MealTypes.ElementAt(i).Selected })*@
                <input type="checkbox" name="mealTypes" value="@Model.MealTypes.ElementAt(i).Selected" id="@Model.MealTypes.ElementAt(i).Value" />
                @Html.LabelFor(m => Model.MealTypes.ElementAt(i).Text, Model.MealTypes.ElementAt(i).Text.ToString())
            </div>
        </div>
    }
</div>

