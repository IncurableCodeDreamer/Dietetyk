@model Parameters

<div class="container" style="margin-top:30px">
        <hr />

    @if (Model.Params.Name == "BMI")
    {
        <div class="form-group">
            <div class="row">
                <div class="col-2">
                    @Html.LabelFor(m => m.ParameterResults.BmiLabel, "Twoje BMI")
                </div>
                <div class="col">
                    @Html.LabelFor(m => m.ParameterResults.Bmi)
                    @Html.LabelFor(m => m.ParameterResults.BmiLabel)
                </div>
            </div>
        </div>
    }
    else if (Model.Params.Name == "CPM")
    {
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(m => m.ParameterResults.Cmp, "Dzienne spożycie kalorii")
            </div>
            <div class="col">
                @Html.LabelFor(m => m.ParameterResults.Cmp)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(m => m.ParameterResults.Protein, "Białko [g]")
            </div>
            <div class="col">
                @Html.LabelFor(m => m.ParameterResults.Protein)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(m => m.ParameterResults.Carbohydrate, "Węglowodany [g]")
            </div>
            <div class="col">
                @Html.LabelFor(m => m.ParameterResults.Carbohydrate)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(m => m.ParameterResults.Fat, "Tłuszcz [g]")
            </div>
            <div class="col">
                @Html.LabelFor(m => m.ParameterResults.Fat)
            </div>
        </div>
    </div>
    }
    else if (Model.Params.Name == "Poziom tkanki tłuszczwej")
    {
    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(m => m.ParameterResults.Whr, "WHR")
            </div>
            <div class="col">
                @Html.LabelFor(m => m.ParameterResults.Whr)
                @Html.LabelFor(m => m.ParameterResults.WhrLabel)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(m => m.ParameterResults.FatLevel, "Procentowa zawartość tkanki tłuszczowej")
            </div>
            <div class="col">
                @Html.LabelFor(m => m.ParameterResults.FatLevel)
            </div>
        </div>
    </div>
    }
</div>